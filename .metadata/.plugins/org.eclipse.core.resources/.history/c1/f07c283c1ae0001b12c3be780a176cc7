package Entidades;

public class Estudante {
	
	public String nome;
	public double nota1;
	public double nota2;
	public double nota3;

	public double notaFinal() {
		return nota1 + nota2 + nota3 / 3;
	}
	
	public String toString() {
		return "A nota final do aluno(a) " + nome + " foi " + String.format("%.2f%n", notaFinal());
	}
	
}

