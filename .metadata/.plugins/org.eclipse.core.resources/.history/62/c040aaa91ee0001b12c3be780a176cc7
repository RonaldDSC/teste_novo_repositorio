package Entidades;

public class Estudante {
	
	public String nome;
	public double nota1;
	public double nota2;
	public double nota3;

	public double notaFinal() {
		return nota1 + nota2 + nota3;
	}
	
	public double pontosParaFinal() {
		if (notaFinal() > 60.0) { 
			System.out.println("Parabéns o aluno foi aprovado! ");
				return 60.0 - notaFinal();
		}
		else {
			return 0.0;
		}
	}
		
	public String toString() {
		return "A nota final do aluno(a) " + nome + " foi " + String.format("%.2f%n", notaFinal());		
	}
	
}

